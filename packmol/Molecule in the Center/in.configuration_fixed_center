tolerance 2.0
filetype pdb
output solvate.pdb

#Colocate a glutamine molecule in the center

structure glutamine.pdb
    #Number of molecules 
    number 1 
    center
    #fix in 3 coordinates + 6 euler rotation angels
    fixed 0. 0. 0. 0. 0. 0.
end structure

#create water outside of it 

structure tip3.pdb
    number 100 
    inside box -30 -30 -30 30 30 30  #x,y,z lower x,y,z upper
end structure
